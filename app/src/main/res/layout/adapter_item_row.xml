<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <ImageView
        android:id="@+id/circle_image_left"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_circle"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:tint="#008C9D"
        app:layout_constraintBottom_toBottomOf="@+id/circle_image_left"
        app:layout_constraintEnd_toEndOf="@+id/circle_image_left"
        app:layout_constraintStart_toStartOf="@+id/circle_image_left"
        app:layout_constraintTop_toTopOf="@+id/circle_image_left"
        app:srcCompat="@drawable/baseline_arrow_downward_24" />

    <TextView
        android:id="@+id/txt_name_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="INGRESO EFECTIVO"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/circle_image_left"
        app:layout_constraintTop_toTopOf="@+id/circle_image_left" />

    <TextView
        android:id="@+id/txt_date_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:text="2 Ene"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle_image_left" />

    <TextView
        android:id="@+id/txt_id_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="4454234****1562000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_date_trans"
        app:layout_constraintStart_toEndOf="@+id/circle_image_left"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_trans" />

    <TextView
        android:id="@+id/txt_amount_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:text="5.000,00 E"
        app:layout_constraintBottom_toBottomOf="@+id/txt_id_trans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_name_trans" />

    <ImageView
        android:id="@+id/image_check_right"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:tint="#008C9D"
        app:layout_constraintBottom_toBottomOf="@+id/txt_amount_trans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_amount_trans"
        app:layout_constraintTop_toTopOf="@+id/txt_amount_trans"
        app:srcCompat="@drawable/baseline_check_24" />

    <ImageView
        android:id="@+id/circle_check_right"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/shape_circle"
        android:tint="#008C9D"
        app:layout_constraintBottom_toBottomOf="@+id/txt_amount_trans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_amount_trans"
        app:layout_constraintTop_toTopOf="@+id/txt_amount_trans"
        app:srcCompat="@drawable/baseline_check_24" />


</androidx.constraintlayout.widget.ConstraintLayout>